.row
  .col-md-offset-4.col-md-4
    %h1 Users#edit
    %p Find me in app/views/users/edit.html.erb
    .user_form_cotainer
      = form_for(@user) do |f|
        - if @user.errors.any?
          #error_explanation
            %h2
              = pluralize(@user.errors.count, "error")
              prohibited this user from being saved:
            %ul
              - @user.errors.full_messages.each do |msg|
                %li= msg
        %ul.user_form.inside
        %h1 Edit Account Setting
        .form-group
          = f.label :contents
          %br/
          = f.text_area :contents, class: 'form-control'
        .form-group
          = f.label :email
          %br/
          = f.text_field :email, class: 'form-control'
        .form-group
          = f.file_field :image
        .form-group
          = f.submit "プロフィールを更新", class: 'btn btn-default'
